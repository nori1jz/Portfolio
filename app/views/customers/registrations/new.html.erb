<div class="container">
  <div class="card">
    <div class="card-body">
    <h2>新規会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :会社名 %>
    <%= f.text_field :company, class: 'form-control', autofocus: true, placeholder:"ABC商事(株)" %>
  </div>
  <div class="field">
    <%= f.label :名前 %>
    （姓） <%= f.text_field :last_name, class: 'form-control', placeholder:"山田" %>
    <%= f.label :名前 %>
    （名）<%= f.text_field :first_name, class: 'form-control', placeholder:"太郎" %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    （姓） <%= f.text_field :kana_last_name, class: 'form-control', placeholder:"ヤマダ" %>
    <%= f.label :フリガナ %>
    （名）<%= f.text_field :kana_first_name, class: 'form-control', placeholder:"タロウ" %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder:"example@example.com"  %>
  </div>
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, class: 'form-control',  placeholder:"0123456"  %>
  </div>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, class: 'form-control', placeholder:"大阪府大阪市北区中之島１丁目３−２０"  %>
  </div>
  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :telephone_number, class: 'form-control', placeholder:"0123456789"  %>
  </div>
  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %>
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-primary' %>
  </div>
<% end %>
会員の方は<%= link_to "こちら", customer_session_path %>からログインを行ってください。

  <%#= render "customers/shared/links" %>
   </div>
  </div>
</div>
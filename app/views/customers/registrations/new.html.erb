<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :会社名 %>
    <%= f.text_field :company, autofocus: true, placeholder:"ABC商事(株)" %>
  </div>
  <div class="field">
    <%= f.label :名前 %>
    （姓） <%= f.text_field :last_name, placeholder:"山田" %>
    （名）<%= f.text_field :first_name, placeholder:"太郎" %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    （姓） <%= f.text_field :kana_last_name, placeholder:"ヤマダ" %>
    （名）<%= f.text_field :kana_first_name, placeholder:"タロウ" %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autocomplete: "email", placeholder:"example@example.com"  %>
  </div>
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, placeholder:"0123456"  %>
  </div>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, placeholder:"大阪府大阪市北区中之島１丁目３−２０"  %>
  </div>
  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :telephone_number, placeholder:"0123456789"  %>
  </div>
  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>

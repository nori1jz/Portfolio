<div class="container">
  <p class="fs-3 mt-3 ms-4">商品編集</p>
  <div class>
  <%= form_with model: @item,url: admin_item_path(@item), local: true  do |f| %>
  
    <div class="field">
      <div>商品画像</div>
      <div><%= f.attachment_field :image %></div>
    </div>
    
    <div class="field">
      <%= f.label :name, "メーカー名" %>
      <%= f.text_field :name %>
    </div>
    
    <div class="field">
      <%= f.label:genres, "ジャンル" %>
      <%= f.collection_select(:genre_id, @genre, :id, :name) %>
     </div>

    <div class="field">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
    </div>
    
    <div class="field">
      <%= f.label :detail, "商品説明" %>
      <%= f.text_area :detail %>
    </div>
    
     
    <div class="field">
      <%= f.label :price, "税抜価格" %>
      <%= f.text_field :price %>円
    </div>
    
    <div class="field">
      <%= f.label :user_price, "定価" %>
      <%= f.text_field :user_price %>円
    </div>
    
    <div class="field">
      <%=f.label:"販売ステータス" %>
        <%= f.radio_button :is_active, "在庫品",checked: true %>
        <%= f.label :is_active, "在庫品", value: :true %>
      
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "取り寄せ品",value: :false %>
      
    </div>
    
    <div class>
      <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
    </div>
   
  <% end %>
  </div>
</div>
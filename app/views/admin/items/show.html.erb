<div class="container">
  <div class="row pl-5">
      <h4>商品詳細</h4>
  </div>

  <div class = "row mt-4 justify-content-center">
      <div class = "col-sm-3">
        <%= attachment_image_tag @item, :image, size: "270x250", format: 'jpeg' %>
      </div>

      <div class = "col-sm-5">
          <table class="table table-borderless">
              <tbody>
                  <tr>
                    <td>メーカー名</td>
                    <td><%= @item.maker.name %></td>
                  </tr>

                  <tr>
                    <td>ジャンル</td>
                    <td><%= @item.genre.name %></td>
                  </tr>

                  <tr>
                    <td>商品名</td>
                    <td><%= @item.name %></td>
                  </tr>

                  <tr>
                    <td>商品説明</td>
                    <td><%= @item.detail %></td>
                  </tr>

                  <tr>
                    <td>税抜価格</br>(税込価格)</td>
                    <td>¥<%= @item.price %></br>(<%= (@item.price * 1.1).floor %>）</td>
                  </tr>

                  <tr>
                    <td>定価</td>
                    <td><%= @item.user_price %></td>
                  </tr>

                  <% if @item.is_active == true %>
                  <tr>
                    <td class="col-3">販売ステータス</td>
                    <td class="col-3 fs-5 fw-bold" style="color:green">在庫品</td>
                  </tr>
                  <% elsif @item.is_active == false %>
                  <tr>
                    <td class="col-3">販売ステータス</td>
                    <td class="col-3 fs-5" style="color:gray">取り寄せ品</td>
                  </tr>
                  <% end %>
                  <tr>
                  <th class=botann colspan="2"><%= link_to "編集する", edit_admin_item_path(@item),class:"btn btn-success"%></th>
                  </tr>
              </tbody>
          </table>
      </div>
  </div>
</div>